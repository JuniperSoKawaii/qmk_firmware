# MCU name 
MCU = STM32F303
# Bootloader selection
BOOTLOADER = stm32-dfu
# Build Options
#   comment out to disable the options.
#
BOOTMAGIC_ENABLE = lite  # Virtual DIP switch configuration(+1000) lizm
MOUSEKEY_ENABLE = yes    # Mouse keys(+4700) lizm
EXTRAKEY_ENABLE = yes    # Audio control and System control(+450)
CONSOLE_ENABLE = no      # Console for debug(+400) lizm
COMMAND_ENABLE = no      # Commands for debug and configuration lizm
SLEEP_LED_ENABLE = no    # Breathing sleep LED during USB suspend
NKRO_ENABLE = yes        # USB Nkey Rollover
BACKLIGHT_ENABLE = no    # Enable keyboard backlight functionality
AUDIO_ENABLE = no
RGBLIGHT_ENABLE = yes 






