{
    "keyboard_name": "PloopyCo Thumb Trackball",
    "url": "www.ploopy.co",
    "maintainer": "ploopyco",
    "manufacturer": "Ploopy Corporation",
    "processor": "atmega32u4",
    "bootloader": "atmel-dfu",
    "usb": {
        "vid": "0x5043",
        "pid": "0x5C46",
        "max_power": 100
    },
    "features": {
        "bootmagic": true,
        "command": false,
        "console": false,
        "extrakey": true,
        "mousekey": true,
        "nkro": true,
        "pointing_device": true,
        "encoder": false
    },
    "debounce": 5,
    "layouts": {
        "LAYOUT": {
            "layout": [
                {"x":0, "y":0, "h": 1},
                {"x":1, "y":0, "h":2},
                {"x":2.5, "y":0.25, "h":1.5},
                {"x":4, "y":0, "h":2},
                {"x":5, "y":0.5, "h":1},
                {"x":0, "y":1, "h":1}
            ]
        }
    }
}
